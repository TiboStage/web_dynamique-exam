{% extends 'base.html.twig' %}

{% block title %}Administration - StoryForge{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-2 mb-4">
            <div class="card bg-dark text-white">
                <div class="card-body p-3">
                    <h6 class="text-uppercase text-muted-light mb-3">Administration</h6>
                    <nav class="nav flex-column">
                        <a class="nav-link active" href="{{ path('app_admin_dashboard') }}"><i class="bi bi-speedometer2"></i> Dashboard</a>
                        <a class="nav-link" href="{{ path('app_admin_users') }}"><i class="bi bi-people"></i> Utilisateurs</a>
                    </nav>
                    <hr class="my-3 opacity-25">
                    <a class="nav-link" href="{{ path('app_dashboard') }}"><i class="bi bi-arrow-left"></i> Retour</a>
                </div>
            </div>
        </div>
        
        <div class="col-lg-10">
            <h1 class="mb-4"><i class="bi bi-speedometer2 me-2"></i>Dashboard Admin</h1>
            
            <div class="row g-4 mb-4">
                <div class="col-md-3">
                    <div class="card dashboard-card"><div class="card-body stat-card">
                        <div class="stat-icon text-primary"><i class="bi bi-people"></i></div>
                        <div class="stat-value">{{ stats.total }}</div>
                        <div class="stat-label">Total utilisateurs</div>
                    </div></div>
                </div>
                <div class="col-md-3">
                    <div class="card dashboard-card success"><div class="card-body stat-card">
                        <div class="stat-icon text-success"><i class="bi bi-person-check"></i></div>
                        <div class="stat-value">{{ stats.active }}</div>
                        <div class="stat-label">Actifs</div>
                    </div></div>
                </div>
                <div class="col-md-3">
                    <div class="card dashboard-card danger"><div class="card-body stat-card">
                        <div class="stat-icon text-danger"><i class="bi bi-person-x"></i></div>
                        <div class="stat-value">{{ stats.banned }}</div>
                        <div class="stat-label">Bannis</div>
                    </div></div>
                </div>
                <div class="col-md-3">
                    <div class="card dashboard-card info"><div class="card-body stat-card">
                        <div class="stat-icon text-info"><i class="bi bi-calendar-plus"></i></div>
                        <div class="stat-value">{{ stats.thisMonth }}</div>
                        <div class="stat-label">Ce mois</div>
                    </div></div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Derniers inscrits</h5>
                    <a href="{{ path('app_admin_users') }}" class="btn btn-sm btn-primary">Voir tous</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead><tr><th>Utilisateur</th><th>Email</th><th>RÃ´le</th><th>Date</th><th>Statut</th></tr></thead>
                        <tbody>
                            {% for user in latestUsers %}
                            <tr>
                                <td><div class="d-flex align-items-center"><div class="user-avatar small me-2">{{ user.username|first|upper }}</div>{{ user.username }}</div></td>
                                <td>{{ user.email }}</td>
                                <td>{% if user.isAdmin %}<span class="badge bg-danger">Admin</span>{% else %}<span class="badge bg-secondary">User</span>{% endif %}</td>
                                <td>{{ user.createdAt|date('d/m/Y') }}</td>
                                <td>{% if user.isBanned %}<span class="badge bg-danger">Banni</span>{% else %}<span class="badge bg-success">Actif</span>{% endif %}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
